<!DOCTYPE html>
<html>
<head>
  <title>Blocmetrics</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <ul class="nav nav-tabs">
      <div class="pull-right user-info">
        <% if user_signed_in? %>
          <li> Signed in as: <%= current_user.email %> - <%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %></li>
      </div>
      <li><%= link_to "Home", welcome_index_path %></li>
      <li><%= link_to "All Sites", registered_applications_path %></li>
      <li><%= link_to "Add New Site", new_registered_application_path %></li>
    </ul>
  </div>
  <% else %>


    <div class="container">
      <ul class="nav nav-tabs">
          <li> <%= link_to "Sign Up", new_user_registration_path, :class => 'navbar-link'  %></li>
          <li> <%= link_to "Sign In", new_user_session_path, :class => 'navbar-link'  %></li>
      </ul>
    </div>
  <% end %>
  <% if flash[:notice] %>
  <div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= flash[:notice] %>
  </div>
<% elsif flash[:alert] %>
  <div class="alert alert-warning">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= flash[:alert] %>
  </div>
<% end %>
<%= yield %>

</body>
</html>
