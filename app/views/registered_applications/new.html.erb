<h1>
  <div class="col-md-8">
    New Application
  </div>
</h1>

<div class="col-md-8">

  <%= form_for @registered_application do |x| %>
    <div class="form-group">
      <%= x.label :name %>
      <%= x.text_field :name, class:'form-control', placeholder: "Enter site name" %>
    </div>
    <div class="form-group">
      <%= x.label :URL %>
      <%= x.text_area :URL, rows: 1, class: 'form-control', placeholder: "Enter site URL" %>
    </div>
    <div class="form-group">
      <%= x.submit "Save", class: 'btn btn-success' %>
    </div>
  <% end %>
